<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Trendy-Z Login/Signup</title>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&display=swap" rel="stylesheet">
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Poppins', sans-serif;
        }

        body {
            background: linear-gradient(135deg, #b400b4, #ff2e63, #ff8e53);
            height: 100vh;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
        }

        .container {
            background: white;
            width: 400px;
            padding: 35px;
            border-radius: 20px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.15);
            text-align: center;
        }

        .logo {
            width: 80px;
            margin: 0 auto 10px;
        }

        .logo img {
            width: 100%;
            border-radius: 10px;
        }

        .brand-name {
            font-size: 22px;
            font-weight: bold;
            background: linear-gradient(to right, #7000ff, #ff3c85);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            margin-bottom: 20px;
        }

        .tabs {
            display: flex;
            justify-content: center;
            gap: 20px;
            margin-bottom: 25px;
        }

        .tab {
            cursor: pointer;
            padding: 8px 18px;
            border-radius: 20px;
            font-weight: 600;
            transition: 0.3s;
            color: #333;
        }

        .tab.active {
            background: linear-gradient(90deg, #b400b4, #ff2e63);
            color: white;
        }

        form {
            display: none;
            flex-direction: column;
        }

        form.active {
            display: flex;
        }

        input {
            padding: 12px;
            margin-bottom: 15px;
            border: 1px solid #ccc;
            border-radius: 10px;
            font-size: 14px;
        }

        button {
            padding: 12px;
            background: linear-gradient(to right, #7000ff, #ff3c85);
            border: none;
            color: white;
            font-weight: 600;
            border-radius: 10px;
            cursor: pointer;
            font-size: 16px;
            transition: 0.3s;
        }

        button:hover {
            opacity: 0.9;
        }

        .small-text {
            font-size: 13px;
            margin-top: 10px;
            color: #888;
        }
    </style>
</head>
<body>
    <%- include("../includes/flash") %>
    <div class="container">
        <!-- Icon Section -->
        <div class="logo">
            <img src="https://upload.wikimedia.org/wikipedia/commons/9/99/Sample_User_Icon.png" alt="Trendy-Z Icon">
        </div>
        <div class="brand-name">TRENDY-Z</div>

        <!-- Tab Switching -->
        <div class="tabs">
            <div id="loginTab" class="tab active">Login</div>
            <div id="signupTab" class="tab">Sign Up</div>
        </div>

        <!-- Login Form -->
        <form id="loginForm" class="active" action="/login" method="POST">
            <input name="username" type="text" placeholder="Username" id="username" required />
            <input type="password" placeholder="Password" name="password" id="password"  required />
            <button type="submit">Login</button>
            <div class="small-text">Forgot your password?</div>
        </form>

        <!-- Signup Form -->
        <form id="signupForm" action="/signUp" method="POST">
            <input type="text" placeholder="Username" name="Username" id="Username" required />
            <input type="email" placeholder="Email" name="email" id="email" required />
            <input type="password" placeholder="Create Password" name="password" id="password" required />
            <button type="submit">Sign Up</button>
        </form>
    </div>

    <script>
        const loginTab = document.getElementById("loginTab");
        const signupTab = document.getElementById("signupTab");
        const loginForm = document.getElementById("loginForm");
        const signupForm = document.getElementById("signupForm");

        // Tab switching
        loginTab.onclick = () => {
            loginTab.classList.add("active");
            signupTab.classList.remove("active");
            loginForm.classList.add("active");
            signupForm.classList.remove("active");
        };

        signupTab.onclick = () => {
            signupTab.classList.add("active");
            loginTab.classList.remove("active");
            signupForm.classList.add("active");
            loginForm.classList.remove("active");
        };

        // Redirect after signup
        // signupForm.addEventListener("submit", function(e) {
        //   e.preventDefault();
        //   window.location.href = "/index.ejs"; // Replace with actual home page
        // });

        // // Redirect after login
        // loginForm.addEventListener("submit", function(e) {
        //   e.preventDefault();
        //   window.location.href = "/index.ejs"; // Replace with actual home page
        // });
    </script>

</body>

</html>